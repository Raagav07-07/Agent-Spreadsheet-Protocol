{
"$schema":"http://json-schema.org/draft-07/schema#",
"title":"ASP Message Envelope",
"type":"object",
"required":[
    "asp_version",
    "message_id",
    "sender",
    "type",
    "timestamp",
    "payload"
],
"properties":{
    "asp_version":{"type":"string"},
    "message_id":{"type":"string"},
    "sender":{"type":"string"},
    "type":{"type":"string",
            "enum":["agent","spreadsheet"]},
    "timestamp":{"type":"string","format":"date-time"},
    "payload":{"type":"object"}
}
}